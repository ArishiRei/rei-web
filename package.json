{
  "name": "rei",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "lint": "pnpm lint:js && pnpm lint:style",
    "lint:js": "eslint .",
    "lint:js:fix": "eslint . --fix",
    "lint:style": "stylelint \"**/*.{css,scss,vue}\"",
    "lint:style:fix": "stylelint \"**/*.{css,scss,vue}\" --fix",
    "lint:fix": "pnpm lint:js:fix && pnpm lint:style:fix",
    "validate:structure": "node scripts/validate-structure.js",
    "validate:structure:report": "node scripts/validate-structure.js --report",
    "validate:docs": "node scripts/validate-cross-references.js",
    "validate:static": "node scripts/validate-static-generation.js",
    "validate:all": "pnpm lint && pnpm validate:structure && pnpm validate:docs",
    "setup:hooks": "node scripts/setup-git-hooks.js",
    "build:ssg": "pnpm validate:all && pnpm generate && pnpm validate:static",
    "build:ssr": "pnpm validate:all && pnpm build",
    "type-check": "nuxt typecheck"
  },
  "dependencies": {
    "@heroicons/vue": "^2.2.0",
    "@material/web": "^2.4.1",
    "@nuxtjs/i18n": "^10.2.1",
    "@pinia/nuxt": "^0.11.3",
    "@tiptap/starter-kit": "^3.14.0",
    "@tiptap/vue-3": "^3.14.0",
    "@types/markdown-it": "^14.1.2",
    "defu": "^6.1.4",
    "gray-matter": "^4.0.3",
    "markdown-it": "^14.1.0",
    "nuxt": "^4.2.2",
    "pinia": "^3.0.4",
    "pinia-plugin-persistedstate": "^4.7.1",
    "vue": "^3.5.25",
    "vue-router": "^4.6.3",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@nuxt/eslint": "^1.12.1",
    "@nuxt/eslint-config": "^1.12.1",
    "@nuxtjs/i18n": "pnpm:@nuxtjs/i18n-edge",
    "@nuxtjs/seo": "^3.3.0",
    "@types/node": "^25.0.3",
    "eslint": "^9.39.2",
    "jsdom": "^27.3.0",
    "postcss-html": "^1.8.0",
    "stylelint": "^16.26.1",
    "stylelint-config-recommended-vue": "^1.6.1",
    "stylelint-config-standard": "^39.0.1",
    "typescript": "^5.9.3"
  }
}
